<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:paddingHorizontal="10dp"
    android:background="@color/lightGreyBackground"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/ivKonselor"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/ivKonselor"
        app:layout_constraintBottom_toBottomOf="@id/ivKonselor"
        app:layout_constraintStart_toEndOf="@id/ivKonselor"
        app:layout_constraintEnd_toEndOf="parent">
        
        <TextView
            android:id="@+id/tvLayananKonselor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/tvNamaKonselor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
    
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>